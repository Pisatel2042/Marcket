<UserControl
    x:Class="WarehouseManager.View.Page.ListProduct"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:WarehouseManager.View.Page"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="1500"
    Height="2500"
    Background="#FFFFFF"
    mc:Ignorable="d">


    <Grid>
        <DataGrid
            AutoGenerateColumns="False"
            Background="#FFFFFF"
            CellStyle="{DynamicResource DataGridCellStyle1}"
            ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}"
            IsReadOnly="True"
            ItemsSource="{Binding Products}"
            RowStyle="{DynamicResource DataGridRowStyle1}"
            ScrollViewer.CanContentScroll="True"
            ScrollViewer.HorizontalScrollBarVisibility="Auto"
            ScrollViewer.VerticalScrollBarVisibility="Auto"
            Style="{DynamicResource DataGridStyle1}">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Name}"
                    Header="Продукт"
                    IsReadOnly="True" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Price}"
                    Header="Цена"
                    IsReadOnly="True" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Image}"
                    Header="Изоброжение"
                    IsReadOnly="True" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Description}"
                    Header="Описание"
                    IsReadOnly="True" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding StockQuantity}"
                    Header="Кол-во на слкаде"
                    IsReadOnly="True" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding CategoryId}"
                    Header="Категория"
                    IsReadOnly="True" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Weight}"
                    Header="Вес"
                    IsReadOnly="True" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding EmployeeId}"
                    Header="Последние изминение"
                    IsReadOnly="True" />
                <DataGridTemplateColumn
                    Width="*"
                    Header="Опции"
                    IsReadOnly="True">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Vertical">
                                <Button Style="{StaticResource gridEditButton}">
                                    <iconPacks:PackIconMaterial Kind="PencilOffOutline" Style="{StaticResource gridButtonIcon}" />
                                </Button>
                                <Button Command="{Binding DeleteCommand}">
                                    <iconPacks:PackIconMaterial Kind="DeleteAlert" Style="{StaticResource gridButtonIcon}" />
                                </Button>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
