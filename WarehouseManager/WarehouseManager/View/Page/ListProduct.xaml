<UserControl
    x:Class="WarehouseManager.View.Page.ListProduct"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WarehouseManager.View.Page"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="584"
    Height="840"
    d:DesignHeight="840"
    d:DesignWidth="584"
    Background="#eae8f3"
    mc:Ignorable="d">

    <Grid>
        <DataGrid
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            IsReadOnly="True"
            ItemsSource="{Binding product}">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Id}" Header="Id" />
                <DataGridTextColumn Binding="{Binding Name}" Header="Продукт" />
                <DataGridTextColumn Binding="{Binding Price}" Header="Цена" />
                <DataGridTextColumn Binding="{Binding Image}" Header="Изоброжение" />
                <DataGridTextColumn Binding="{Binding Description}" Header="Описание" />
                <DataGridTextColumn Binding="{Binding StockQuantity}" Header="Кол-во на слкаде" />
                <DataGridTextColumn Binding="{Binding CategoryId}" Header="Категория" />
                <DataGridTextColumn Binding="{Binding Weight}" Header="Вес" />
                <DataGridTextColumn Binding="{Binding EmployeeId}" Header="Последние изминение" />

            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
