<UserControl
    x:Class="WarehouseManager.View.Page.Finance"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WarehouseManager.View.Page"
    xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="968"
    d:DesignWidth="634"
    Background="White"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="290" />
            <ColumnDefinition Width="*" />

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />

        </Grid.RowDefinitions>
        <GroupBox
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="1"
            Margin="10"
            Header="Cегодня">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="65" />
                    <RowDefinition Height="64" />
                </Grid.RowDefinitions>

                <!--  Выручка  -->
                <DockPanel
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="2">
                    <Border
                        Background="Azure"
                        BorderBrush="Black"
                        BorderThickness="2"
                        CornerRadius="5"
                        DockPanel.Dock="Top">
                        <StackPanel Orientation="Vertical">
                            <Label  Content="{Binding Revenue}" />
                            <Label Content="Выручка" />
                        </StackPanel>
                    </Border>
                </DockPanel>
                <!--  Кол-во Доставок  -->
                <DockPanel
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="2">
                    <Border
                        Background="Azure"
                        BorderBrush="Black"
                        BorderThickness="2"
                        CornerRadius="5"
                        DockPanel.Dock="Top">
                        <StackPanel Orientation="Vertical">
                            <Label Content="{Binding DeliveryCount}" />
                            <Label Content="Кол-во Доставок" />
                        </StackPanel>
                    </Border>
                </DockPanel>
                <!--  Выплота курьерам  -->
                <DockPanel
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="2">
                    <Border
                        Background="Azure"
                        BorderBrush="Black"
                        BorderThickness="2"
                        CornerRadius="5"
                        DockPanel.Dock="Top">
                        <StackPanel Orientation="Vertical">
                            <Label Content="12121" />
                            <Label Content="Выплата курьерам" />
                        </StackPanel>
                    </Border>
                </DockPanel>


            </Grid>

        </GroupBox>


        <Grid
            Grid.Row="0"
            Grid.Column="1"
            Margin="20">
            <!--  График кол-во заказав в сутки  -->
            <lvc:CartesianChart
                AxisX="{Binding XAxes}"
                AxisY="{Binding YAxes}"
                Series="{Binding Series}" />
        </Grid>
        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Vertical">
            <Label Content="История Заказов"/>
            <DataGrid Margin="5" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" />
                    <DataGridTextColumn Header="Заказ" />
                    <DataGridTextColumn Header="Корзина" />
                    <DataGridTextColumn Header="Рабоник" />
                    <DataGridTextColumn Header="Дата" />
                    <DataGridTextColumn Header="Курьер" />
                    <DataGridTextColumn Header="Стаус" />
                </DataGrid.Columns>
            </DataGrid>

        </StackPanel>
        <GroupBox Header="Бугалтерия" Grid.Column="0" Grid.Row="1">
            
            
        <Grid >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>


            <Button Margin="10" Content="распечатать " Grid.Row="0"/>
            <Button Margin="10" Content="Создать отчет" Grid.Row="1"/>
            <Button Margin="10" Content="выгрузить в Exsel " Grid.Row="2"/>


        </Grid>
            
        </GroupBox>
        <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="1">
            
        </StackPanel>
    </Grid>

</UserControl>
