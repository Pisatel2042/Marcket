<UserControl
    x:Class="WarehouseManager.View.Page.Finance"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WarehouseManager.View.Page"
    xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="968"
    d:DesignWidth="634"
    Background="White"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="290" />
            <ColumnDefinition Width="*" />

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />

        </Grid.RowDefinitions>
        <GroupBox
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="1"
            Margin="10"
            Header="Cегодня">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="65" />
                    <RowDefinition Height="64" />
                </Grid.RowDefinitions>

                <!--  Выручка  -->
                <DockPanel
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="2">
                    <Border
                        Background="Azure"
                        BorderBrush="Black"
                        BorderThickness="2"
                        CornerRadius="5"
                        DockPanel.Dock="Top">
                        <StackPanel Orientation="Vertical">
                            <Label Content="{Binding Revenue}" />
                            <Label Content="Выручка" />
                        </StackPanel>
                    </Border>
                </DockPanel>
                <!--  Кол-во Доставок  -->
                <DockPanel
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="2">
                    <Border
                        Background="Azure"
                        BorderBrush="Black"
                        BorderThickness="2"
                        CornerRadius="5"
                        DockPanel.Dock="Top">
                        <StackPanel Orientation="Vertical">
                            <Label Content="{Binding DeliveryCount}" />
                            <Label Content="Кол-во Доставок" />
                        </StackPanel>
                    </Border>
                </DockPanel>
                <!--  Выплота курьерам  -->
                <DockPanel
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="2">
                    <Border
                        Background="Azure"
                        BorderBrush="Black"
                        BorderThickness="2"
                        CornerRadius="5"
                        DockPanel.Dock="Top">
                        <StackPanel Orientation="Vertical">
                            <Label Content="12121" />
                            <Label Content="Выплата курьерам" />
                        </StackPanel>
                    </Border>
                </DockPanel>


            </Grid>

        </GroupBox>


        <Grid
            Grid.Row="0"
            Grid.Column="1"
            Margin="20">

            <lvc:CartesianChart x:Name="PurchasesChart" >
                <lvc:CartesianChart.Series>
                   
                    <lvc:ColumnSeries 
                   
                    Values="{Binding PurchaseValues}" 
                    Fill="#FF3F51B5"  
                    DataLabels="True"
                        />
                      
                </lvc:CartesianChart.Series>
                <lvc:CartesianChart.AxisX>
                  
                    <lvc:Axis 
                    Title="Часы" 
                    Labels="{Binding HoursLabels}"
                    Separator="{x:Static lvc:DefaultAxes.CleanSeparator}"/>
                  
                </lvc:CartesianChart.AxisX>
                <lvc:CartesianChart.AxisY>
                   
                    <lvc:Axis 
                    Title="Количество" 
                    LabelFormatter="{Binding YFormatter}"/>
                </lvc:CartesianChart.AxisY>
            </lvc:CartesianChart>
        </Grid>
        <StackPanel
            Grid.Row="1"
            Grid.Column="1"
            Orientation="Vertical">
            <Label Content="История Заказов" />
            <DataGrid Margin="5" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" />
                    <DataGridTextColumn Header="Заказ" />
                    <DataGridTextColumn Header="Корзина" />
                    <DataGridTextColumn Header="Рабоник" />
                    <DataGridTextColumn Header="Дата" />
                    <DataGridTextColumn Header="Курьер" />
                    <DataGridTextColumn Header="Стаус" />
                </DataGrid.Columns>
            </DataGrid>

        </StackPanel>
        <GroupBox
            Grid.Row="1"
            Grid.Column="0"
            Header="Бугалтерия">


            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>


                <Button
                    Grid.Row="0"
                    Margin="10"
                    Content="распечатать " />
                <Button
                    Grid.Row="1"
                    Margin="10"
                    Content="Создать отчет" />
                <Button
                    Grid.Row="2"
                    Margin="10"
                    Content="выгрузить в Exsel " />


            </Grid>

        </GroupBox>
        <StackPanel
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="1" />
    </Grid>

</UserControl>
