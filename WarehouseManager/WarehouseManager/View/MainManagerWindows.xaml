<Window
    x:Class="WarehouseManager.View.MainManagerWindows"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:WarehouseManager.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainManagerWindows"
    Width="1280"
    Height="692"
    Background="#e0e1dd"
    mc:Ignorable="d">
    <Window.Resources />
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="15" />
            <ColumnDefinition Width="240" />
            <ColumnDefinition Width="15" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="15" />

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="15" />
            <RowDefinition Height="Auto" />

            <RowDefinition Height="15" />
        </Grid.RowDefinitions>
        <StackPanel
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.Column="1"
            Orientation="Vertical">
            <Label Content="Три толстяка " />


            <Label Padding="4" Content="Меню" />
            <Button
                x:Name="MainButton"
                Width="230"
                Height="40"
                Margin="5"
                HorizontalAlignment="Left"
                Background="{Binding ButtonMainBackground}"
                Command="{Binding ChangingTheColor}"
                CommandParameter="MainButton"
                Foreground="{Binding ButtonMainForeground}"
                Style="{StaticResource MainButtonStyle}">
                <StackPanel Margin="0,0,125,0" Orientation="Horizontal">
                    <iconPacks:PackIconMaterial
                        Width="20"
                        Height="20"
                        Margin="1"
                        Foreground="{Binding ButtonMainForeground}"
                        Kind="Home" />
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="14"
                        Foreground="{Binding ButtonMainForeground}"
                        Text="Главная" />
                </StackPanel>

            </Button>
            <Button
                x:Name="FinanceButton"
                Height="40"
                Margin="5"
                Background="{Binding ButtonItogiBackground}"
                Command="{Binding ChangingTheColor}"
                CommandParameter="FinanceButton"
                Foreground="{Binding ButtonItogiForeground}"
                Style="{StaticResource MainButtonStyle}">

                <StackPanel Orientation="Horizontal">
                    <iconPacks:PackIconMaterial
                        Width="20"
                        Height="20"
                        Margin="1"
                        Padding="4"
                        Foreground="{Binding ButtonItogiForeground}"
                        Kind="Finance" />
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="14"
                        Foreground="{Binding ButtonItogiForeground}"
                        Text="Финансы " />
                </StackPanel>
            </Button>
            <Button
                Height="40"
                Margin="5"
                Background="{Binding ButtonProductBackground}"
                Command="{Binding ChangingTheColor}"
                CommandParameter="ProductButton"
                Foreground="{Binding ButtonProductForeground}"
                Style="{StaticResource MainButtonStyle}">

                <StackPanel Orientation="Horizontal">
                    <iconPacks:PackIconMaterial
                        Width="20"
                        Height="20"
                        Margin="1"
                        Padding="4"
                        Foreground="{Binding ButtonProductForeground}"
                        Kind="Warehouse" />
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="14"
                        Foreground="{Binding ButtonProductForeground}"
                        Text="Склад" />
                </StackPanel>
            </Button>
            <Button
                Height="40"
                Margin="5"
                Background="{Binding ButtonProductBackground}"
                Command="{Binding ChangingTheColor}"
                CommandParameter="PriemButton"
                Foreground="{Binding ButtonProductForeground}"
                Style="{StaticResource MainButtonStyle}">


                <StackPanel Orientation="Horizontal">
                    <iconPacks:PackIconMaterial
                        Width="20"
                        Height="20"
                        Margin="1"
                        Padding="4"
                        Foreground="{Binding ButtonPriemForeground}"
                        Kind="Forklift" />
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="14"
                        Foreground="{Binding ButtonPriemForeground}"
                        Text="Приемка " />
                </StackPanel>
            </Button>
            <Button
                Height="40"
                Margin="5"
                Background="{Binding ButtonProductBackground}"
                Command="{Binding ChangingTheColor}"
                CommandParameter="ProductButton"
                Content="История Заказов"
                Foreground="{Binding ButtonProductForeground}"
                Style="{StaticResource MainButtonStyle}" />

        </StackPanel>

        <ContentControl
            Grid.Row="2"
            Grid.Column="3"
            Margin="0,0,0,-351"
            Content="{Binding CurrentView}" />
    </Grid>
</Window>
